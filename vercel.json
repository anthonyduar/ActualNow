{
  "version": 2,
  "builds": [
    {
      "src": "generate_sitemap.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/static/sitemap.xml"
    },
    {
      "src": "/wp-sitemap-index.xsl",
      "dest": "/static/wp-sitemap-index.xsl"
    },
    {
      "src": "/(.*)",
      "dest": "/static/$1"
    }
  ],
  "installCommand": "pip install -r requirements.txt"
}